#Run this script in your Cloud Shell ennvironment
#Search for "RENAME" to find the variables you need to rename for your azure subscription.
#Ports that open are: 80(Web),21(FTP),22(SSH)



# Create a resource group if it doesnâ€™t exist
resource "azurerm_resource_group" "RENAME" {
    name     = "RENAME"
    location = "uksouth"

    tags {
        environment = "ENV TAGS HERE"
    }
}

# Create virtual network
resource "azurerm_virtual_network" "RENAME" {
    name                = "RENAME"
    address_space       = ["10.0.0.0/16"]
    location            = "uksouth"
    resource_group_name = "${azurerm_resource_group.hewsolgroup1.name}"

    tags {
        environment = "ENV TAGS HERE"
    }
}

# Create subnet
resource "azurerm_subnet" "RENAME" {
    name                 = "RENAME"
    resource_group_name  = "${azurerm_resource_group.hewsolgroup1.name}"
    virtual_network_name = "${azurerm_virtual_network.hewsolnetwork1.name}"
    address_prefix       = "10.0.1.0/24"
}

# Create public IPs
resource "azurerm_public_ip" "RENAME" {
    name                         = "RENAME"
    location                     = "uksouth"
    resource_group_name          = "${azurerm_resource_group.hewsolgroup1.name}"
    allocation_method            = "Dynamic"

    tags {
        environment = "ENV TAGS HERE"
    }
}

# Create Network Security Group and rule
resource "azurerm_network_security_group" "RENAME" {
    name                = "RENAME"
    location            = "uksouth"
    resource_group_name = "${azurerm_resource_group.hewsolgroup1.name}"

    security_rule {
        name                       = "SSH"
        priority                   = 1001
        direction                  = "Inbound"
        access                     = "Allow"
        protocol                   = "Tcp"
        source_port_range          = "*"
        destination_port_range     = "22"
        source_address_prefix      = "*"
        destination_address_prefix = "*"
    }
    security_rule {
        name                       = "WebAccess80"
        priority                   = 1002
        direction                  = "Inbound"
        access                     = "Allow"
        protocol                   = "Tcp"
        source_port_range          = "*"
        destination_port_range     = "80"
        source_address_prefix      = "*"
        destination_address_prefix = "*"
    }
    security_rule {
        name                       = "FTPAccess"
        priority                   = 1003
        direction                  = "Inbound"
        access                     = "Allow"
        protocol                   = "Tcp"
        source_port_range          = "*"
        destination_port_range     = "21"
        source_address_prefix      = "*"
        destination_address_prefix = "*"
    }

    tags {
        environment = "ENV TAGS HERE"
    }
}

# Create network interface
resource "azurerm_network_interface" "RENAME" {
    name                      = "RENAME"
    location                  = "uksouth"
    resource_group_name       = "${azurerm_resource_group.hewsolgroup1.name}"
    network_security_group_id = "${azurerm_network_security_group.hewsolnsg1.id}"

    ip_configuration {
        name                          = "nic_conf01"
        subnet_id                     = "${azurerm_subnet.hewsolsubnet1.id}"
        private_ip_address_allocation = "Dynamic"
        public_ip_address_id          = "${azurerm_public_ip.hewsolpublicip1.id}"
    }

    tags {
        environment = "ENV TAGS HERE"
    }
}

# Generate random text for a unique storage account name
resource "random_id" "randomId" {
    keepers = {
        # Generate a new ID only when a new resource group is defined
        resource_group = "${azurerm_resource_group.hewsolgroup1.name}"
    location                        ="uksouth"
    }

    byte_length = 8
}

# Create storage account for boot diagnostics
resource "azurerm_storage_account" "RENAME" {
    name                        = "diag${random_id.randomId.hex}"
    resource_group_name         = "${azurerm_resource_group.hewsolgroup1.name}"
    location                    = "uksouth"
    account_tier                = "Standard"
    account_replication_type    = "LRS"

    tags {
        environment = "ENV TAGS HERE"
    }
}

# Create virtual machine
resource "azurerm_virtual_machine" "RENAME" {
    name                  = "RENAME"
    location              = "uksouth"
    resource_group_name   = "${azurerm_resource_group.hewsolgroup1.name}"
    network_interface_ids = ["${azurerm_network_interface.hewsolnic1.id}"]
    vm_size               = "Standard_DS1_v2"

    storage_os_disk {
        name              = "myOsDisk"
        caching           = "ReadWrite"
        create_option     = "FromImage"
        managed_disk_type = "Premium_LRS"
    }

    storage_image_reference {
        publisher = "Canonical"
        offer     = "UbuntuServer"
        sku       = "16.04.0-LTS"
        version   = "latest"
    }

    os_profile {
        computer_name  = "RENAME"
        admin_username = "USER"
        admin_password = "CHANGEME"
    }

    os_profile_linux_config {
        disable_password_authentication = true
        ssh_keys {
            path     = "/home/USER/.ssh/authorized_keys"
            key_data = "ssh-rsa {KEY HERE}"
        }
    }

    boot_diagnostics {
        enabled = "true"
        storage_uri = "${azurerm_storage_account.RENAME.primary_blob_endpoint}"
    }

    tags {
        environment = "ENV TAGS HERE"
    }
}
